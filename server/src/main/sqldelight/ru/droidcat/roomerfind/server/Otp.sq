import kotlinx.datetime.Instant;

CREATE TABLE otp  (
    email TEXT NOT NULL,
    userId TEXT NOT NULL,
    otp TEXT NOT NULL,
    expiredAt TIMESTAMP AS Instant NOT NULL
);

insert:
INSERT INTO otp (email, userId, otp, expiredAt)
VALUES (:email, :userId, :otp, :expiredAt);

select:
SELECT * FROM otp
WHERE email = :email
AND otp = :otp;
